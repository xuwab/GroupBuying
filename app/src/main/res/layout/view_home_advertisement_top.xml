<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#ffe8e8e8"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="10.0dip"
        android:layout_height="72.0dip">
        <ImageView
            android:id="@+id/id_center_banner_icon_0"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:src="@mipmap/ad1"/>
        <View
            android:layout_width="1.0px"
            android:layout_height="wrap_content"
            android:background="#ffe8e8e8"/>
        <ImageView
            android:id="@+id/id_center_banner_icon_1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:src="@mipmap/ad2"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="#ffe8e8e8" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="10.0dip"
        android:layout_height="72.0dip">
        <ImageView
            android:id="@+id/id_center_banner_icon_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:src="@mipmap/ad3"/>
        <View
            android:layout_width="1.0px"
            android:layout_height="wrap_content"
            android:background="#ffe8e8e8"/>
        <ImageView
            android:id="@+id/id_center_banner_icon_3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:src="@mipmap/ad4"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#ffe8e8e8"/>
</LinearLayout>