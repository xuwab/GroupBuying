<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 自定义ViewPagerIndicator  -->
    <declare-styleable name="ViewPagerIndicator">
        <attr name="numbers" format="integer"/>
        <attr name="foreColor" format="color"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="gapWidth" format="float"/>
    </declare-styleable>


    <!-- 首页 Toolbar的style-->
    <style name="home_title_bar_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/home_title_bar_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50.0dp</item>
    </style>

    <!--login-->
    <style name="left_back_img_style">
        <item name="android:background">@drawable/imageview_btn_selector</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:src">@mipmap/icon_back</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!-- 登录界面 -->
    <style name="right_btn_style">
        <item name="android:background">@drawable/imageview_btn_selector</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- 子界面 -->
    <style name="title_bar_style">
        <item name="android:background">@color/title_bar_color</item>
        <item name="android:paddingLeft">0.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50.0dip</item>
    </style>
</resources>
