<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 自定义ViewPagerIndicator  -->
    <declare-styleable name="ViewPagerIndicator">
        <attr name="numbers" format="integer"/>
        <attr name="foreColor" format="color"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="gapWidth" format="float"/>
    </declare-styleable>


    <!-- 首页 Toolbar的style-->
    <style name="home_title_bar_style">
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:background">@color/home_title_bar_color</item>-->
        <item name="android:background">@color/home_title_bar_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50.0dp</item>
    </style>

    <!--login-->
    <style name="left_back_img_style">
        <item name="android:background">@drawable/imageview_btn_selector</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:src">@mipmap/icon_back</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!-- 登录界面 -->
    <style name="right_btn_style">
        <item name="android:background">@drawable/imageview_btn_selector</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- 子界面 -->
    <style name="title_bar_style">
        <item name="android:background">@color/title_bar_color</item>
        <item name="android:paddingLeft">0.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50.0dip</item>
    </style>

    <style name="home_super_today_textStyle">
        <item name="android:textSize">@dimen/section_text_size</item>
        <item name="android:textColor">@color/home_super_today_textColor_default</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/list_view_item_bg_selector</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:paddingBottom">5.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 标题栏 -->
    <style name="title_bar_center_text_style">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="left_back_img_photo_style">
        <item name="android:background">@drawable/imageview_btn_selector</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:src">@mipmap/icon_back_photo</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>
